{
  "name": "@mikaeelmf/apexpro-connector-node",
  "version": "0.3.3",
  "description": "ApexPro Connector Node.js SDK",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "lib/node-dist"
  ],
  "repository": "https://github.com/MikaeelMF/apexpro-connector-node",
  "authors": [
    "lihang941",
    "RoderickIsWatching",
    "MikaeelMF"
  ],
  "scripts": {
    "test": "mocha test/**.spec.ts",
    "test:env": "mocha test/index.spec.ts",
    "test:pro": "mocha test/pro/**.spec.ts",
    "test:omni": "mocha test/omni/**.spec.ts",
    "test:omniPrivate": "mocha test/omni/private.spec.ts",
    "clean": "rimraf dist lib lib.esm lib.umd cache artifacts out docs",
    "build:cjs": "tsc -p tsconfig.cjs.json --diagnostics",
    "build:umd": "webpack",
    "format": "prettier --write \"(src|test)/**/*.ts\"",
    "lint": "tslint -p tsconfig.json --fix",
    "doc": "typedoc --excludeExternals --excludePrivate --out docs ./src/**",
    "build": "pnpm run clean && pnpm run build:cjs && pnpm run copy:node-dist",
    "copy:node-dist": "cp -R src/packages/node-dist lib/packages/node-dist"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@types/bn.js": "^5.1.6",
    "@types/elliptic": "^6.4.18",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "babelify": "^10.0.0",
    "big.js": "^6.2.2",
    "chai": "^5.1.2",
    "copy-webpack-plugin": "^12.0.2",
    "es6-promisify": "^7.0.0",
    "eslint": "^9.15.0",
    "hardhat": "^2.22.16",
    "mocha": "10.8.2",
    "mochawesome": "^7.1.3",
    "prettier": "^3.4.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.27.0",
    "typescript": "5.7.2",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@ethersproject/bytes": "^5.7.0",
    "@metamask/providers": "^18.2.0",
    "axios": "^1.7.8",
    "bigint-buffer": "^1.1.5",
    "bignumber.js": "^9.1.2",
    "bn.js": "^5.2.1",
    "crypto": "^1.0.1",
    "crypto-browserify": "^3.12.1",
    "crypto-js": "^4.2.0",
    "elliptic": "^6.6.1",
    "ethereum-cryptography": "3.0.0",
    "ethers": "6.13.4",
    "lodash": "^4.17.21",
    "qs": "^6.13.1",
    "viem": "^2.21.51",
    "web3": "4.15.0",
    "web3-core": "^4.7.0",
    "web3-core-helpers": "^1.10.3",
    "web3-eth-accounts": "^4.3.0",
    "web3-providers-http": "^4.2.0",
    "web3-providers-ipc": "^4.0.7",
    "web3-providers-ws": "^4.0.8"
  },
  "mocha": {
    "timeout": 120000,
    "require": "ts-node/register",
    "recursive": true,
    "exit": true,
    "reporter": "mochawesome",
    "reporterOptions": {
      "reportDir": "test-report",
      "reportFilename": "apexpro-connector-node"
    },
    "extension": "ts"
  },
  "publishConfig": {
    "access": "public"
  }
}
